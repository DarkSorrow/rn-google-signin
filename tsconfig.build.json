{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib/typescript",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "react-native",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "example",
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/__mocks__/**"
  ]
} 