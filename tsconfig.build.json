{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "example", 
    "lib", 
    "node_modules",
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/__mocks__/**"
  ]
} 