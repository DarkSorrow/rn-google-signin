{
  "name": "@novastera/rn-google-signin",
  "version": "0.1.0",
  "type": "module",
  "description": "Modern React Native Google Sign-In with Turbo Modules support",
  "main": "lib/typescript/index.js",
  "module": "lib/typescript/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "dependencies.json",
    "plugin",
    "scripts",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "npm run typecheck && npm run lint",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "clean": "del-cli lib plugin/build",
    "build": "tsc -p tsconfig.build.json && npm run build:plugin",
    "build:plugin": "tsc -p plugin/tsconfig.json",
    "prepare": "npm run build",
    "setup-ios-deps": "chmod +x scripts/setup_ios_dependencies.sh && ./scripts/setup_ios_dependencies.sh",
    "setup-ios-deps:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup_ios_dependencies.ps1"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "google-signin",
    "authentication",
    "turbo-modules",
    "new-architecture",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novastera/rn-google-signin.git"
  },
  "author": "Novastera <contact@novastera.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/novastera/rn-google-signin/issues"
  },
  "homepage": "https://github.com/novastera/rn-google-signin#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@expo/config-plugins": "^10.0.0",
    "@types/node": "^20.11.19",
    "@types/react": "~19.0.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "@types/react": "~18.2.14"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "codegenConfig": {
    "name": "RNGoogleSigninSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  }
}
